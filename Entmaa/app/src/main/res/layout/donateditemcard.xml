<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Entmaa.ShapeAppearance.Card.Rounded"
        app:strokeColor="@color/color_on_surface_alpha_10"
        app:strokeWidth="@dimen/card_stroke_width"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/donatedItemPic"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@color/whiteGray"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/Entmaa.ShapeAppearance.imageView.RoundedCorner"/>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <TextView
                  android:id="@+id/donatedItemName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Item Name"
                  android:layout_marginLeft="@dimen/margin_normal"
                  android:textAppearance="?attr/textAppearanceSubtitle2"
                  android:textSize="24dp"
                  android:layout_marginTop="@dimen/margin_medium"/>
              <TextView
                  android:id="@+id/donatedItemStatus"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/blue_100"
                  android:text="Reserved"
                  android:layout_marginLeft="@dimen/margin_normal"
                  android:textSize="16dp"/>

              <TextView
                  android:id="@+id/donatedItemContent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/margin_normal"
                  android:layout_marginBottom="@dimen/margin_medium"
                  android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed di"
                  android:textSize="16dp"/>

              </LinearLayout>

          </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>