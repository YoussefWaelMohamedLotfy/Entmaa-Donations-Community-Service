<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_normal"
        app:strokeColor="@color/color_on_surface_alpha_10"
        app:strokeWidth="@dimen/card_stroke_width"
        app:cardElevation="@dimen/card_elevation"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/posterPhoto"
                android:layout_width="@dimen/post_photo_size"
                android:layout_height="@dimen/post_photo_size"
                android:layout_marginStart="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_medium"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerSize50Percent"
                app:srcCompat="@drawable/placeholder" />

            <TextView
                android:id="@+id/postTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintBottom_toBottomOf="@id/posterPhoto"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/posterPhoto"
                app:layout_constraintTop_toTopOf="@id/posterPhoto"
                app:layout_constraintVertical_bias="0.12"
                tools:text="Title" />



            <TextView
                android:id="@+id/byText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_post_by"
                android:textAppearance="?attr/textAppearanceCaption"
                app:layout_constraintTop_toBottomOf="@id/postTitle"
                app:layout_constraintStart_toStartOf="@id/postTitle" />

            <TextView
                android:id="@+id/postedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Organization name"
                android:layout_marginStart="@dimen/margin_small"
                android:textAppearance="?attr/textAppearanceCaption"
                app:layout_constraintBaseline_toBaselineOf="@id/byText"
                app:layout_constraintStart_toEndOf="@id/byText" />

            <TextView
                android:id="@+id/timePosted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3:00 PM"
                android:textAppearance="?attr/textAppearanceCaption"
                android:layout_marginStart="@dimen/margin_small"
                app:layout_constraintBaseline_toBaselineOf="@id/postedBy"
                app:layout_constraintStart_toEndOf="@id/postedBy" />

            <TextView
                android:id="@+id/agoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_post_ago"
                android:textAppearance="?attr/textAppearanceCaption"
                android:layout_marginStart="@dimen/margin_small"
                app:layout_constraintBaseline_toBaselineOf="@id/timePosted"
                app:layout_constraintStart_toEndOf="@id/timePosted" />

            <TextView
                android:id="@+id/postBody"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/margin_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/posterPhoto"
                app:layout_constraintTop_toBottomOf="@+id/byText"
                tools:text="I found this item " />

            <ImageView
                android:id="@+id/postPhoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/placeholder"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintTop_toBottomOf="@id/postBody"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/locationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_normal"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16sp"
                android:text="Location: "
                app:layout_constraintTop_toBottomOf="@id/postPhoto"
                />

            <TextView
                android:id="@+id/statusTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/green_300"
                app:layout_constraintBaseline_toBaselineOf="@id/mapsButton"
                app:layout_constraintStart_toStartOf="@id/locationLabel"
                tools:text="Found" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/locationLabel"
                app:layout_constraintStart_toEndOf="@id/locationLabel"
                android:text="Ain Shams"
                />

            <Button
                android:id="@+id/mapsButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:text="View On Maps"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/contactBtn"
                app:layout_constraintTop_toBottomOf="@id/locationLabel" />

            <Button
                android:id="@+id/contactBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:layout_marginEnd="@dimen/margin_normal"
                android:layout_marginVertical="@dimen/margin_small"
                app:layout_constraintBaseline_toBaselineOf="@id/mapsButton"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>



