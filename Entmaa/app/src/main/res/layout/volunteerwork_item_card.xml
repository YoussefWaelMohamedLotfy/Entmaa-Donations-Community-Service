<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Entmaa.ShapeAppearance.Card.Rounded"
        app:strokeColor="@color/color_on_surface_alpha_10"
        app:strokeWidth="@dimen/card_stroke_width"
        app:cardElevation="@dimen/card_elevation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/donatedItemPic"
                android:layout_width="75dp"
                android:layout_height="75dp"


                android:background="@color/whiteGray"
                android:scaleType="centerCrop"
                android:src="@drawable/addimg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />


            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event A "
                android:layout_marginLeft="@dimen/margin_medium"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:textSize="24dp"
                app:layout_constraintStart_toEndOf="@+id/donatedItemPic"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: Monday 23/12/2020"
                android:layout_marginLeft="@dimen/margin_medium"
                android:textColor="@color/green_300"
                android:textSize="16dp"
                app:layout_constraintStart_toEndOf="@+id/donatedItemPic"
                app:layout_constraintTop_toBottomOf="@+id/eventName" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>