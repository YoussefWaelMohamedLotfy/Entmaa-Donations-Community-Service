<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Entmaa.Button.TextButton.Caption" parent="Widget.MaterialComponents.Button.TextButton" >

        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <!-- Same as textAppearanceCaption text color -->
        <item name="android:textColor">@color/color_on_surface_alpha_50</item>
        <item name="iconTint">@color/color_on_surface_alpha_50</item>

        <item name="iconEndPadding">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>

    </style>

    <style name="Entmaa.Button.IconButton" parent="Widget.MaterialComponents.Button.TextButton" >

        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <!-- Same as textAppearanceCaption text color -->
        <item name="android:textColor">@color/color_on_surface_alpha_50</item>
        <item name="iconTint">@color/color_on_surface_alpha_50</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Entmaa.Button" parent="Widget.MaterialComponents.Button" >
        <item name="textAllCaps">false</item>
        <item name="shapeAppearance">@style/Entmaa.ShapeAppearance.Button</item>
        <item name="fontFamily">@font/nunito_semibold</item>
    </style>



    <!-- Material Input layout-->
    <style name="Entmaa.TextInputLayout.OutlinedBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/Entmaa.ShapeAppearance.TextInputLayout</item>
        <item name="boxStrokeWidth">@dimen/text_input_layout_stroke</item>

    </style>


    <!-- Chip -->

    <style name="Entmaa.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="android:textColor">@color/chip_txt_color</item>
        <item name="chipStrokeColor">@color/color_on_surface_alpha_10</item>
        <item name="rippleColor">@color/color_on_surface_alpha_25</item>
        <item name="android:textSize">11sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="shapeAppearanceOverlay">@style/Entmaa.ShapeOverlay.Chip</item>
        <item name="chipStartPadding">18dp</item>
        <item name="chipEndPadding">18dp</item>
        <item name="chipMinHeight">40dp</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/green_300</item>
        <item name="colorPrimaryDark">@color/green_600</item>
        <item name="colorAccent">@color/green_500</item>
    </style>


    <style name="Entmaa.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="Entmaa.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Entmaa.BottomSheet</item>
    </style>


</resources>